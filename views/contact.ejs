<div class="container">
  <div class="row">
    <div class="col-md-8">
      <h2>Daftar Contacts</h2>

      <a href="/contact/add" class="btn btn-primary mb-2"
        >Tambah Data Contact</a
      >

      <% if (msg.length > 0) { %>
      <div class="alert alert-success" role="alert"><%= msg %></div>
      <% } %>

      <table class="table table-striped">
        <thead>
          <tr>
            <th scope="col">No</th>
            <th scope="col">Name</th>
            <th scope="col">No. HP</th>
            <th scope="col">Aksi</th>
          </tr>
        </thead>
        <tbody>
          <% if (contacts.length < 1) { %>
          <tr>
            <td colspan="4">
              <div class="alert alert-danger fw-bold" role="alert">
                Data not Found!
              </div>
            </td>
          </tr>
          <% } %> <% contacts.forEach((contact, index) => { index++ %>
          <tr>
            <th scope="row"><%= index++ %></th>
            <td><%= contact.name %></td>
            <td><%= contact.nohp %></td>
            <td>
              <a
                href="/contact/<%= contact.name %> "
                class="btn btn-success badge rounded-pill"
                ><i class="bi bi-info-square"></i> detail</a
              >
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>
